<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Лабораторная работа №6</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Студенты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Room" asp-action="Index">Комнаты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Resettlement" asp-action="Index">Переселения</a>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <button type="button" class="btn dropdown-toggle flat" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Сохранить
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="ImportExport" asp-action="Save" asp-route-format="1">BIN</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="ImportExport" asp-action="Save" asp-route-format="2">XML</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="ImportExport" asp-action="Save" asp-route-format="3">JSON</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <button type="button" class="btn dropdown-toggle flat" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Открыть
                                </button>
                                <div class="dropdown-menu">
                                    <button class="dropdown-item" id="loadBin">BIN</button>
                                    <button class="dropdown-item" id="loadXml">XML</button>
                                    <button class="dropdown-item" id="loadJson">JSON</button>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $("#loadBin").click(function () {
            var $input = document.createElement("input");
            $input.setAttribute("type", "file");
            $input.style.visibility = "hidden";
            $input.setAttribute("multiple", "multiple");
            $input.onchange = function (event) {
                var file = $input.files[0];
                var formData = new FormData();
                formData.append('file', file);
                formData.append('format', 1);
                $.ajax('/ImportExport/Load', {
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        document.location.reload();
                    }
                }).fail(function (e) {
                    alert(e.responseText);
                });
            };
            $input.click()
        });

        $("#loadXml").click(function () {
            var $input = document.createElement("input");
            $input.setAttribute("type", "file");
            $input.style.visibility = "hidden";
            $input.setAttribute("multiple", "multiple");
            $input.onchange = function (event) {
                var file = $input.files[0];
                var formData = new FormData();
                formData.append('file', file);
                formData.append('format', 2);
                $.ajax('/ImportExport/Load', {
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        document.location.reload();
                    }
                }).fail(function (e) {
                    alert(e.responseText);
                });
            };
            $input.click()
        });

        $("#loadJson").click(function () {
            var $input = document.createElement("input");
            $input.setAttribute("type", "file");
            $input.style.visibility = "hidden";
            $input.setAttribute("multiple", "multiple");
            $input.onchange = function (event) {
                var file = $input.files[0];
                var formData = new FormData();
                formData.append('file', file);
                formData.append('format', 3);
                $.ajax('/ImportExport/Load', {
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        document.location.reload();
                    },

                }).fail(function (e) {
                    alert(e.responseText);
                });
            }
            $input.click()
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
