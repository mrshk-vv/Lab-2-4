@model DomainModel.Models.Resettlement

@{
    ViewData["Title"] = "Create";
}

@{
    var rooms = Storage.Instance.db.Rooms.ToList().Select(x => new SelectListItem(x.RoomNumber.ToString(), x.Id.ToString()));
    var students = Storage.Instance.db.Students.ToList().Select(x => new SelectListItem(x.FullName, x.GradeBookNumber.ToString()));
}

<h1>Create</h1>

<h4>Resettlement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GradeBookNumber" class="control-label"></label>
                    @Html.DropDownListFor(m => m.GradeBookNumber, students,  new { @class = "form-control" })
                    <span asp-validation-for="GradeBookNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HostelNumber" class="control-label"></label>
                    @Html.DropDownListFor(m => m.HostelNumber, Html.GetEnumSelectList<Hostel>(), "Общежитие", new { @class = "form-control" })
                    <span asp-validation-for="HostelNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoomId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.RoomId, rooms, new { @class = "form-control" })
                    <span asp-validation-for="RoomId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckInDate" class="control-label"></label>
                    <input type="date" asp-for="CheckInDate" class="form-control" />
                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChectOutDate" class="control-label"></label>
                    <input type="date" asp-for="ChectOutDate" class="form-control" />
                    <span asp-validation-for="ChectOutDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
